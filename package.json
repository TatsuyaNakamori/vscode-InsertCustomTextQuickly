{
    "name": "insertcustomtext",
    "displayName": "Insert Custom Text Quickly",
    "description": "Quickly insert custom text",
    "icon": "resources/icon/extension_main.png",
    "version": "2.0.0",
    "publisher": "TatsuyaNakamori",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Other"
    ],
    "license": "MIT",
    "keywords": [
        "string",
        "text",
        "insert",
        "snippets"
    ],
    "homepage": "https://github.com/TatsuyaNakamori/vscode-InsertCustomTextQuickly",
    "repository": {
        "type": "git",
        "url": "https://github.com/TatsuyaNakamori/vscode-InsertCustomTextQuickly.git"
    },
    "bugs": {
        "url": "https://github.com/TatsuyaNakamori/vscode-InsertCustomTextQuickly/issues"
    },
    "activationEvents": [
        "onCommand:insertcustomtext.inserttext"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "category": "InsertCustomTextQuickly",
                "command": "insertcustomtext.inserttext",
                "title": "%inserttext.title%",
                "when": "editorTextFocus"
            }
        ],
        "configuration": [
            {
                "title": "InsertCustomText",
                "properties": {
                    "insertText.customText": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "markdownDescription": "%inserttext.conf.text%",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "\"Hello!\",„Äé„Åä„ÇÑ„Åô„Åø„Äèüò™üí§, 'Wake up!'",
                            "Backslash:\\b,\\nNewLine,\\nTAB\\tTAB",
                            "if (${1:condision}) {\\n    $0\\n}",
                            "${UUID}",
                            "<div>${[HOLD]}</div>",
                            "<div align=\"${1:left}\">${[HOLD]}</div>",
                            "[default] ${[DATE]}\\n[ja-format] ${[DATE]YYYYÂπ¥MMMMDÊó•(dd), A h:mm:ja}",
                            "${[SEQ]%d:1:1}",
                            "${[SEQ]%c:65:1}",
                            "${[SEQ]%d:x:x}"
                        ]
                    },
                    "insertText.recently": {
                        "type": "array",
                        "uniqueItems": true,
                        "markdownDescription": "%inserttext.conf.resently%",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "keybindings": [
            {
                "command": "insertcustomtext.inserttext",
                "key": "ctrl+alt+i",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "group": "1_modification",
                    "command": "insertcustomtext.inserttext",
                    "when": "editorTextFocus"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/voca": "^1.4.0",
        "@types/vscode": "^1.53.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "dependencies": {
        "dayjs": "^1.10.4",
        "voca": "^1.4.0"
    }
}
